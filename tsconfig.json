{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2022"]
	},
	"include": ["stow/**/*.ts"],
	"exclude": ["node_modules", "**/node_modules"]
}
